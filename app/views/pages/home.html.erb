<div class="banner_list">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('banner_home.jpg') %>)">
      <div class="container">
        <h2 class="font-heading">Space Out</h2>
        <p>Welcome to Space Out. The best place to find rooms and spaces to run your meetings and workshops.</p>
        <%= link_to 'Search Spaces', rooms_path, class: "btn btn-light" %>
      </div>
  </div>
</div>

<div class="container px-4 py-5">
  <h2 class="pb-2 border-bottom">Our highly rated spaces</h2>
  <div class="row">
  <% @rooms[2..6].each do |room| %>
  <div class="card-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=room.image_url%>);">
  <%= room.title %>
  </div>
  <% end %>
  </div>
</div>
